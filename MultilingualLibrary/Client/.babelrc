{
    "presets": [
        "es2015",
        "stage-0",
        "react"
    ],
    "plugins": [
        "transform-decorators-legacy",
        [
            "i18n-tag-translate",
            {
                "globalImport": true // Adds import i18n, { i18nConfig, i18nGroup } from "es2015-i18n-tag"; to the output
            }
        ]
    ],
    "env": {
        "development": {
            "plugins": [
                "react-hot-loader/babel"
            ]
        },
        "production": {
            "presets": [
                "react-optimize"
            ]
        }
    }
}